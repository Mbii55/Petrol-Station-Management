<body class="dark-theme">
    <div class="bg-light min-vh-100 d-flex flex-row align-items-center dark:bg-transparent">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-8">
                    <div class="card-group d-block d-md-flex row">
                        <div class="card col-md-7 p-4 mb-0">
                            <div class="card-body">
                                <h1>Login</h1>
                                <form method="post" id="button">
                                    <p class="text-medium-emphasis">Sign In to your account</p>
                                    <p style="color: red;">{{message}}</p>
                                    <div class="input-group mb-3"><span class="input-group-text">
                                            <svg class="icon">
                                                <use xlink:href="/static/vendors/@coreui/icons/svg/free.svg#cil-user">
                                                </use>
                                            </svg></span>
                                        <input class="form-control" type="text" placeholder="Username" name="username">
                                    </div>
                                    <div class="input-group mb-4"><span class="input-group-text">
                                            <svg class="icon">
                                                <use
                                                    xlink:href="/static/vendors/@coreui/icons/svg/free.svg#cil-lock-locked">
                                                </use>
                                            </svg></span>
                                        <input class="form-control" type="password" placeholder="Password"
                                            name="password">
                                    </div>
                                </form>

                                <div class="row">
                                    <div class="col-6">
                                        <button class="btn btn-primary px-4" type="submit" form="button">Login</button>
                                    </div>

                                 
                                </div>
                            </div>
                        </div>
                        <div class="card col-md-5 text-white bg-primary-gradient py-5">
                            <div class="card-body text-center">
                                <div>
                                    <h2>Sign up</h2>
                                    <p>Welcome to our exclusive petrol station management portal. Sign up to unlock
                                        efficient and innovative tools for managing your station with ease and
                                        precision.</p>
                                    <a href="/managerRegistration" class="btn btn-lg btn-outline-light mt-3">Register
                                        Now!</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- CoreUI and necessary plugins-->
    <script src="/static/vendors/@coreui/coreui/js/coreui.bundle.min.js"></script>
    <script src="/static/vendors/simplebar/js/simplebar.min.js"></script>
    <script>
    </script>

</body>

</html>